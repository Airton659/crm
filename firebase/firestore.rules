rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Função helper para verificar se usuário está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Collection: leads
    match /leads/{leadId} {
      // Leitura apenas para autenticados (App Gestor)
      allow read: if isAuthenticated();
      // Escrita (create) permitida para TODOS (PWA público)
      allow create: if true;
      // Update/delete apenas para autenticados
      allow update, delete: if isAuthenticated();
    }

    // Collection: interacoes
    match /interacoes/{interacaoId} {
      // Permitir leitura e escrita para usuários autenticados
      allow read, write: if isAuthenticated();
    }

    // Collection: agendamentos
    match /agendamentos/{agendamentoId} {
      // Permitir leitura e escrita para usuários autenticados
      allow read, write: if isAuthenticated();
    }

    // Collection: statistics (se existir)
    match /statistics/{statId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Collection: users (se existir)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Collection: configurations
    match /configurations/{configId} {
      // Leitura permitida para TODOS (PWA precisa ler configurações do slider)
      allow read: if true;
      // Escrita apenas para autenticados (App Gestor)
      allow write: if isAuthenticated();
    }

    // Collection: campaigns
    match /campaigns/{campaignId} {
      // Leitura e escrita apenas para autenticados (App Gestor)
      allow read, write: if isAuthenticated();
    }

    // Collection: lead_sources (analytics de origem)
    match /lead_sources/{sourceId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
  }
}
